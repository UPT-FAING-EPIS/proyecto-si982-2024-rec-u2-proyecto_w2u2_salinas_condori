@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión - Loopify</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #00A79D;
            color: white;
            font-family: 'Inter', sans-serif;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-card {
            background: white;
            color: #333;
            padding: 30px;
            border-radius: 10px;
            width: 400px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .login-logo {
            width: 150px;
            height: auto;
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color: #00A79D;
            border: none;
        }

            .btn-primary:hover {
                background-color: #007A6E;
            }

        .links {
            margin-top: 20px;
            text-align: center;
        }

            .links a {
                color: #00A79D;
                text-decoration: none;
            }

                .links a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="text-center">
                <img src="~/Assets/LoppifyLogo.png" alt="Loopify Logo" class="login-logo" />
            </div>
            <h3 class="text-center">Bienvenido</h3>
            <p class="text-center text-muted">Inicie sesión para continuar</p>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }
            <form method="post" action="/Cuenta/IniciarSesion">
                <div class="mb-3">
                    <label for="correo" class="form-label">Correo</label>
                    <input type="email" class="form-control" id="correo" name="correo" placeholder="Ingrese su correo" required />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese su contraseña" required />
                        <button class="btn btn-outline-secondary" type="button" onclick="togglePassword()">👁️</button>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
            </form>
            <div class="links">
                <p class="mt-3">
                    <a href="/Cuenta/ReestablecerContrasena">¿Olvidó su contraseña?</a>
                </p>
                <p>
                    ¿No tiene una cuenta? <a href="/Cuenta/Registro">Regístrese aquí</a>
                </p>
            </div>
        </div>
    </div>
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('contrasena');
            passwordInput.type = passwordInput.type === 'password' ? 'text' : 'password';
        }
    </script>
</body>
</html>
