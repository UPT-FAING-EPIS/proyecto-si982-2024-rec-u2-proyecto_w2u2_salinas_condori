@model List<LoopifyFinal.Models.Usuario>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4" style="color: #00A79D;">Gestión de Vendedores</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="/Administrador/CrearVendedor" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Añadir Vendedor
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <ul class="list-group">
            @foreach (var vendedor in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>@vendedor.Nombre (@vendedor.Correo)</span>
                    <div>
                        <a href="/Administrador/DetallesVendedor/@vendedor.Id" class="btn btn-primary btn-sm">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="/Administrador/EditarVendedor/@vendedor.Id" class="btn btn-warning btn-sm text-white">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <button onclick="confirmarEliminar(@vendedor.Id)" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <div class="alert alert-info text-center">
            No hay vendedores registrados.
        </div>
    }
</div>

<footer class="text-center mt-4">
    © 2025 Loopify - Todos los derechos reservados.
</footer>

<script>
    function confirmarEliminar(id) {
        if (confirm("¿Está seguro de que desea eliminar este vendedor?")) {
            window.location.href = '/Administrador/EliminarVendedor/' + id;
        }
    }
</script>
